<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/about_img"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_margin="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/the12smb"
            />


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/about_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="@string/about_name"
                android:textSize="24sp"
                android:textStyle="bold"
                />

        </androidx.cardview.widget.CardView>




        <TextView
            android:id="@+id/about_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="ilhamshodiq"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/about_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="ilhambheh@gmail.com"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/about_alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/about_alamat"
            android:textSize="16sp"
            />

    </LinearLayout>





</RelativeLayout>